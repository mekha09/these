@Article{AmmosovJETP1986,
  Title                    = {Tunnel ionization of complex atoms and of atomic ions in an alternating electromagnetic field},
  Author                   = {Ammosov, M.V. and Delone, N.B. and Krainov, V.P.},
  Journal                  = {Soviet Physics - JETP},
  Year                     = {1986},
  Month                    = {Dec.},
  Pages                    = {1191-4},
  Volume                   = {64},
  Abstract                 = {{An expression is derived for the probability of tunnel ionization, in
 an alternating field, of a complex atom and of an atomic ion that are
 in an arbitrary state. The expression for the tunnel-ionization
 probability is obtained in the quasiclassical approximation n{*}Gt1.
 Expressions are also obtained for states with arbitrary values of l at
 arbitrary ellipticity of the radiation. A quasiclassical approximation
 yields results up to values n{*}ap1, with accuracy up to several
 percent. }},
  Affiliation              = {{Ammosov, M.V.; Delone, N.B.; Krainov, V.P.; Inst. of Gen. Phys., Acad. of Sci., USSR..}},
  Identifying-codes        = {{[ZETFA7],[0038-5646/86/121191-04\$04.00]}},
  Issue                    = {{6}},
  Keywords                 = {{Theoretical or Mathematical/ ionisation of atoms; photoionisation/ complex atoms; atomic ions; alternating electromagnetic field; tunnel ionization; quasiclassical approximation/ A3280F Atomic photoionization, photodetachment, photoelectron spectra}},
  Language                 = {{English}},
  Number-of-references     = {{0}},
  Original-source          = {{Zhurnal Eksperimental'noi i Teoreticheskoi Fiziki vol.91, no.6 : 2008-13, Dec. 1986}},
  Publication-type         = {{J}},
  Type                     = {{Journal Paper}},
  Unique-id                = {{INSPEC:3027514}}
