@Article{MendozaOL2015,
  Title                    = {Laguerre-Gauss beams versus Bessel beams showdown: Peer comparison},
  Author                   = {Job Mendoza-Hern\'{a}ndez and Maximino Luis Arroyo-Carrasco and Marcelo David Iturbe-Castillo and Sabino Ch\'{a}vez-Cerda},
  Journal                  = {Opt. Lett.},
  Year                     = {2015},
  Month                    = {Aug},
  Number                   = {16},
  Pages                    = {3739--3742},
  Volume                   = {40},
  Abstract                 = {We present for the first time a comparison under similar circumstances between Laguerre\&\#x2013;Gauss beams (LGBs) and Bessel beams (BB), and show that the former can be a better option for many applications in which BBs are currently used. By solving the Laguerre\&\#x2013;Gauss differential equation in the asymptotic limit of a large radial index, we find the parameters to perform a peer comparison, showing that LGBs can propagate quasi-nondiffracting beams within the same region of space where the corresponding BBs do. We also demonstrate that LGBs, which have the property of self-healing, are more robust in the sense that they can propagate further than BBs under similar initial conditions.},
  DOI                      = {10.1364/OL.40.003739},
  Keywords                 = {Paraxial wave optics ; Invariant optical fields ; Wave propagation},
  Publisher                = {OSA},
  URL                      = {http://ol.osa.org/abstract.cfm?URI=ol-40-16-3739}
}

