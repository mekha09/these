@Article{HernandezNJP2015,
  Title                    = {Quantum-path signatures in attosecond helical beams driven by optical vortices},
  Author                   = {Hern\'andez-Garc\'{i}a, Carlos and San Rom\'an, Julio and Plaja, Luis and Pic\'on, Antonio},
  Journal                  = {New Journal of Physics},
  Year                     = {2015},
  Number                   = {9},
  Pages                    = {093029},
  Volume                   = {17},
  Abstract                 = {High-order harmonic generation (HHG) driven by beams carrying orbital angular momentum has been recently demonstrated as a unique process to generate spatio-temporal coherent extreme ultraviolet (XUV)/x-ray radiation with attosecond helical structure. We explore the details of the mapping of the driving vortex to its harmonic spectrum. In particular we show that the geometry of the harmonic vortices is complex, arising from the superposition of the contribution from the short and long quantum paths responsible of HHG. Transversal phase-matching and quantum path interferences provide an explanation of the dramatic changes in the XUV vortex structure generated at different relative positions of the target respect to the laser beam focus. Finally, we show how to take advantage of transversal phase-matching to select helical attosecond beams generated from short or long quantum paths, exhibiting positive or negative temporal chirp respectively.},
  URL                      = {http://stacks.iop.org/1367-2630/17/i=9/a=093029}
}

