@Article{VodungboOE2011,
  Title                    = {Polarization control of high order harmonics in the EUV photon energy range},
  Author                   = {Boris Vodungbo and Anna Barszczak Sardinha and Julien Gautier and Guillaume Lambert and Constance Valentin and Magali Lozano and Gr\'{e}gory Iaquaniello and Franck Delmotte and St\'{e}phane Sebban and Jan L\"{u}ning and Philippe Zeitoun},
